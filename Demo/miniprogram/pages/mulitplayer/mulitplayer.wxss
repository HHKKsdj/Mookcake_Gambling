.one,.two,.three{
  margin-top: 70px;
  margin-left: 5px;
  width: 35px;
  height: 35px;
}
.four,.five,.six{
  margin-top: 5px;
  margin-left: 5px;
  width: 35px;
  height: 35px;
}


.reminder {
  font-weight: bold;
  font-size:x-large ;
  color: yellow;
  margin-top: 100rpx;
  margin-left: 50rpx;
}


.table {
  display: flex;
  flex-direction: column;
  width: 95%;
  height: 250px;
  background-color: rgba(238, 238, 238, 0.678);
  overflow: auto;
  margin-top: 100rpx;
}


.thead {
  z-index: 2;
  display: flex;
  flex-direction: row;
  position: sticky;
  top: 0;
}


.tbody {
  z-index: 1;
  display: flex;
  flex-direction: row;
}


.tr {
  display: flex;
  flex-direction: row;
}


.td, .th {
  width: 56px;
  border-bottom: 1px solid black;
  border-right: 1px solid black;
  text-align: center;
  box-sizing: border-box;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}


.td:first-child, .th:first-child {
  border-left: 1px solid black;
}


.td:last-child, .th:last-child {
  border-right: 1px solid black;
}


.last .td {
  border-bottom: 1px solid black;
}


.thead .tr .th {
  background-color:  rgba(238, 238, 238, 0.678);
  position: sticky;
  top: 0;
  border-top: 1px solid black;
}


.td:first-child {
  position: sticky;
  left: 0;
  background-color:  rgba(238, 238, 238, 0.678);
}


.thead .tr .th:first-child {
  z-index: 2;
  left: 0;
}
